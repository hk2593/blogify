<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <%- include('./partials/searchbox') %>
    <div class="container mt-3">
      <div class="row row-cols-4">
        <% blogs.forEach(blog => { %>
          <div class="col mb-4" >
            <div class="card mr-2 " style="width: 17rem;">
              <img src="<%= blog.coverImageURL %>" class="card-img-top" style="height: 10.125rem;" />
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>